{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "rootDir": "./src/",
    "outDir": "./dist/",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts"
  ],
  "exclude": [
    "src/mod.ts",
    "src/middleware.ts",
    "src/deno/**/*.ts",
    "src/**/*.test.ts"
  ]
}