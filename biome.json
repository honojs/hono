{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
		"noInferrableTypes": "off",
		"noParameterAssign": "off"
      },
	  "a11y": {
		"useHtmlLang": "off"
	  }, 
	  "correctness": {
		"noUndeclaredVariables": "off",
		"noUnnecessaryContinue": "off"
	  },
      "nursery": {
        "noUselessLoneBlockStatements": "off"
      },
      "complexity": {
		"useLiteralKeys": "off",
		"useSimplifiedLogicExpression": "off",
		"noBannedTypes" : "off",
		"noForEach": "off"
      }, 
	  "suspicious": {
		"noExplicitAny": "off",
		"noRedeclare": "off" 
	  }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
	}
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingComma": "none",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteProperties": "asNeeded"
    }
  }
}
