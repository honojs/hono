root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf

[*.{js,jsx,ts,tsx,json,json5,jsonc}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{lockb,pxm}]
charset = unset
insert_final_newline = unset
end_of_line = unset
