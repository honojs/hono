{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "rootDir": "./src/",
    "outDir": "./dist/cjs/",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.mts",
    "src/mod.ts",
    "src/middleware.ts",
    "src/deno/**/*.ts",
    "src/**/*.test.ts"
  ]
}